@model UpToSellModel

<section class="up-to-sell">
    <div class="container">
        <div class="collection-grid">
            <div class="item-1">
                <!-- collection-item start -->
                <a href="#" class="collection-item">
                    <img src="images/placeholders/369x310.svg" alt="">
                    <div class="body">
                        <div class="title">Table Lamp - scelerisque tempore</div>
                        <div class="info">
                            <div class="price">
                                <i class="old-price">$50.00</i>
                                <i class="new-price">$30.00</i>
                            </div>
                            <i class="add-cart fa-regular fa-cart-plus"></i>
                        </div>
                    </div>
                </a>
                <!-- collection-item end -->
            </div>
            <div class="discover">
                <!-- collection-content start -->
                <div class="collection-content">
                    <div class="container">
                        <div class="title-red">@Model.TitleRed</div>
                        <div class="title">@Model.Title</div>
                        <div class="ingress">@Model.Ingress</div>
                        <div class="text">@Model.Text</div>
                        <a href="#" class="link">@Model.LinkText</a>
                    </div>
                </div>
                <!-- collection-content end -->
            </div>
            <div class="item-2">
                <!-- collection-item start -->
                <a href="#" class="collection-item">
                    <img src="images/placeholders/369x310.svg" alt="">
                    <div class="body">
                        <div class="title">Table Lamp - scelerisque tempore</div>
                        <div class="info">
                            <div class="price">
                                <i class="old-price">$50.00</i>
                                <i class="new-price">$30.00</i>
                            </div>
                            <i class="add-cart fa-regular fa-cart-plus"></i>
                        </div>
                    </div>
                </a>
                <!-- collection-item end -->
            </div>
        </div>
    </div>
</section>
