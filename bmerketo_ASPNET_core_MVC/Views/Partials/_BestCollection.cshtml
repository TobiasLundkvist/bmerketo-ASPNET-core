@model BestCollectionModel

<section class="best-collection">
    <div class="container">
        <h1 class="collection-title">@Model.Title</h1>

        @if (Model.Categories != null)
        {
            <ul class="categories">
                @foreach(var category in Model.Categories)
                {
                    <li class="category-item">@category</li>
                }
            </ul>
        }


        @if (Model.BestCollectionItems != null)
        {
            <div class="collection-grid">
                @foreach (var product in Model.BestCollectionItems)
                {
                    <partial name="/Views/Partials/_ProductCard.cshtml" model="product" />
                }
            </div>
        }

        @if (Model.LoadMore)
        {
            <div class="load-more">
                <button class="btn-outline-white">LOAD MORE <i class="fa-solid fa-rotate-right"></i></button>
            </div>
        }


    </div>
</section>
