@{
    var products = await productService.GetAllAsync();

}


<section class="all-products">
    <div class="container">
        <h1 class="all-product-title">ALL PRODUCTS</h1>
        <div class="collection-grid">

            @if (products != null)
            {
                foreach (var product in products)
                {
                    <a asp-controller="products" asp-action="DetailedProduct" asp-route-id="@product.Id" class="collection-item">
                        <img src=@product.ImageUrl alt="@product.Title">
                        <div class="body">
                            <div class="title">@product.Title</div>
                            <div class="info">
                                <div class="price">
                                    <i class="new-price">@product.Price</i>
                                    <i class="old-price">@product.OldPrice</i>
                                </div>
                                <i class="add-cart fa-regular fa-cart-plus"></i>
                            </div>
                        </div>
                    </a>
                }
            }
        </div>
    </div>
</section>
